<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.probono.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_baseline_add_location_24"
            android:drawableRight="@drawable/ic_baseline_add_location_24"
            android:gravity="center"
            android:text="              주소"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="289dp"
            android:layout_height="161dp"
            android:layout_gravity="center"
            android:layout_margin="80dp"
            android:src="@drawable/boda2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="413dp"
        android:layout_marginTop="400dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_baseline_restaurant_24"
            android:gravity="center"
            android:scaleType="fitStart"
            android:text="주문하기"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:backgroundTint="#19CAE1" />


        <Button
            android:id="@+id/button2"
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_baseline_list_alt_24"
            android:gravity="center"
            android:text="주문내역"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:backgroundTint="#49ACFB" />


    </LinearLayout>

</RelativeLayout>